printf("Pilot firmware version: <model.CodeGen.Version>\r\n");
  printf("Build Date: <model.CodeGen.Date>\r\n");
  #ifdef DEBUG
  printf("DEBUG enabled\r\n");
  #endif
<if (model.IsTest)>
